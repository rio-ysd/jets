<div class="columns">
  <div class="column">
    <h1 class="title is-1">Companies</h1>
  </div>
  <div class="column has-text-right">
    <%= link_to '<i class="fas fa-file-medical mr-1"></i>New'.html_safe, new_company_path, class: 'button' %>
  </div>
</div>

<% if @companies.present? %>
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr class="jets-element-to-delete">
          <td><%= company.name %></td>
          <td class="has-text-right">
            <%= link_to '<i class="fas fa-file-alt"></i>'.html_safe, company %>
            <%= link_to '<i class="fas fa-pencil-alt ml-3"></i>'.html_safe, edit_company_path(company) %>
            <%= link_to '<i class="far fa-trash-alt ml-3"></i>'.html_safe, company, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="notification is-warning">
    Data Not Found.
  </div>
<% end %>
