<%= form_with(model: [:admin, company], local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :name %>
  <%= form.text_field :name, class: 'input' %>

  <%= form.fields_for :users do |user|   %>
    <%= user.label :first_user %>
    <%= user.text_field :user, required: true, class: 'input' %>

    <%= user.label :email %>
    <%= user.text_field :email, required: true, class: 'input' %>

  <% end %>

  <div class="mt-5 pt-5">
    <%= form.submit class: 'button is-success' %>
  </div>
<% end %>